<h1 class="card-header">NEW RESTAURANT</h1>

<%= form_with model: @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.submit %>

<% end %>

<p><%= link_to "back to list", restaurants_path, class: "btn btn-primary"  %></p>
